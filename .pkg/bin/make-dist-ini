#!/usr/bin/env perl

use strict;
use YAML::XS;
use Template::Toolkit::Simple;
use Hash::Merge 'merge';
use IO::All;

my $meta = Load io->file('Meta')->all;
my $cpan = delete($meta->{'=cpan'}) || {};
my $data = merge($cpan, $meta);

print tt
    ->path(['./.pkg'])
    ->data($data)
    ->render('dist.ini');

