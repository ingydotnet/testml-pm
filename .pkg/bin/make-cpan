#!/usr/bin/env bash

set -e

rm -fr cpan
mkdir cpan

(
  set -x
  cp Changes cpan
  cp -r lib cpan
  [ -e bin ] && cp -r bin cpan
  [ -e eg ] && cp -r eg cpan
  cp -r test cpan/t
  rm -fr cpan/t/devel cpan/t/misc
  ./.pkg/bin/make-dist-ini > cpan/dist.ini
)

for kwim in $(find doc -type f -name '*.kwim'); do
  pod="${kwim/doc/cpan/lib}"
  pod="${pod/.kwim/.pod}"
  mkdir -p "$(dirname "$pod")"
  if grep '^====' "$kwim" &> /dev/null; then
    (
      set -x
      kwim --to=pod --pod-cpan "$kwim" > "$pod"
    )
  else
    (
      set -x
      kwim --to=pod --complete --wrap "$kwim" > "$pod"
    )
  fi
done

# vim: set sw=2 lisp:
